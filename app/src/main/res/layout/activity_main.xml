<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido al Menu Principal"
            android:textColor="#FFF"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"
            />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toast"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/white"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Activity"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/white"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#BFEFBD"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"

                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/disclaimer"
                    android:layout_gravity="center"
                    android:id="@+id/alertimg"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#BFEFBD"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/wheat"
                    android:layout_gravity="center"
                    android:id="@+id/toastimg"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#BFEFBD"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/screen"
                    android:layout_gravity="center"
                    android:id="@+id/actimg"
                    />

            </androidx.cardview.widget.CardView>
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:background="@drawable/poly"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/iconfinder_logo_brand_brands_logos_firefox_2993692"
                android:layout_marginLeft="10dp"
                android:alpha="@integer/material_motion_duration_long_1"
                android:layout_marginBottom="30dp"
                />

            <Button
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FFF"
                android:shadowColor="#FFF"
                android:outlineAmbientShadowColor="#FFF"
                android:shadowDx="0"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:textStyle="italic|bold"
                android:textColor="#ED6E47"
                android:text="Firefox"
                android:id="@+id/firefox"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/iconfinder_logo_brand_brands_logos_chrome_2993698"
                android:layout_marginLeft="10dp"
                android:alpha="@integer/material_motion_duration_long_1"
                android:layout_marginBottom="30dp"

                />

            <Button
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FFF"
                android:shadowColor="#FFF"
                android:outlineAmbientShadowColor="#FFF"
                android:shadowDx="0"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:textStyle="italic|bold"
                android:textColor="#ED1515"
                android:text="Chrome"
                android:id="@+id/chrome"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/iconfinder_logo_brand_brands_logos_edge_2993695"
                android:layout_marginLeft="10dp"
                android:alpha="@integer/material_motion_duration_long_1"
                android:layout_marginBottom="30dp"

                />

            <Button
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FFF"
                android:shadowColor="#FFF"
                android:outlineAmbientShadowColor="#FFF"
                android:shadowDx="0"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:textStyle="italic|bold"
                android:textColor="#47BEED"
                android:id="@+id/edge"
                android:text="Edge" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/iconfinder_logo_brand_brands_logos_playstore_google_2993672"
                android:layout_marginLeft="10dp"
                android:alpha="@integer/material_motion_duration_long_1"
                />

            <Button
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FFF"
                android:shadowColor="#FFF"
                android:outlineAmbientShadowColor="#FFF"
                android:shadowDx="0"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:textStyle="italic|bold"
                android:textColor="#0BE80F"
                android:id="@+id/playstore"
                android:text="Google PlayStore" />
        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#670808"
            android:orientation="vertical"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear Archivo"
                android:id="@+id/crearArchivo"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:backgroundTint="#EC1818"
                />
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:background="@drawable/poly2"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/angularjs"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vue"
                android:layout_marginRight="10dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reaact"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angular"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="#0D50C3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vue"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:textColor="#0D50C3"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="React"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:textColor="#0D50C3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Instalar"
                android:id="@+id/Angularinst"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Instalar"
                android:id="@+id/Vueinst"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Instalar"
                android:id="@+id/Reactinst"
                />
        </GridLayout>
    </LinearLayout>
</ScrollView>